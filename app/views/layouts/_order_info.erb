<!--部分テンプレート：注文商品情-->
<!--public orders#confirm orders#show-->

<table class = "table table-bordered">
  <thead class = "table-active">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% order_items.each do |cart_item| %>
      <tr>
        <td>
          <% if controller.controller_name == "orders" && controller.action_name == "confirm" %>
            <%= image_tag cart_item.item.get_item_image(100,100), class: "img-fluid" %>
          <% end %>
          <%= cart_item.item.name %>
        </td>
        <td class = "align-middle text-right"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td class = "align-middle text-right"><%= cart_item.amount %></td>
        <td class = "align-middle text-right"><%= cart_item.subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </tbody>
</table>