<!--Admin::Genres#edit-->
<div class = "container-fluid px-5 m-5 px-sm-0">

  <div class = "row mb-4 offset-1">
    <div class ="col">
      <h4 class = "mb-3"><span class = "bg-headline px-2">ジャンル編集</span></h4>
    </div>
  </div>

  <div class = "form-grouprow offset-1 mb-5 pb-3">
    <%= form_with model:[:admin ,@genre], method: :patch do |f| %>
      <%= f.label :name, 'ジャンル名', class: "col-form-label col-sm-2" %>
      <%= f.text_field :name, autofocus: true, class: "col-sm-2" %>
      <%= f.submit "変更を保存", class: 'btn btn-success col-sm-1 ml-5' %>
    <% end %>
  </div>

</div>
