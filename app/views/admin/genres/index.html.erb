<!--Admin::Genres#index-->
<div class = "container">

  <div class = "row">
    <!--画面mdサイズ以上で8/12使用　mdサイズ以上で、一つ右にずらす-->
    <div class = "col offset-md-1">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>

  <div class = "row">
    <div class = "col offset-md-1">
      <%= form_with model:[:admin ,@genre], method: :post do |f| %>
        <%= f.label :name, 'ジャンル名', class: "col-2" %>
        <%= f.text_field :name, autofocus: true, class: "w-100 col-4" %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>

  <div class = "row">
    <div class = "col offset-md-1">
      <table>
        <thead>
          <tr>
            <th colspan="2">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する",edit_admin_genre_path(genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
