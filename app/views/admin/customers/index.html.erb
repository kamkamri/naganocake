<div class = "container">


  <div class ="row">
    <div class = "col"><h4>会員一覧</h4></div>
  </div>


  <div class ="row">
    <civ class = "col">
      <table>
        <thead>
          <tr>
            <td>会員ID</td>
            <td>氏名</td>
            <td>メールアドレス</td>
            <td>ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><u><%= link_to customer.name_display, admin_customer_path(customer.id) %></u></td>
              <td><%= customer.email %></td>
              <td><%= customer.is_active ? '有効':'退会' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </civ>
  </div>


</div>
