<!--<h1>Admin::Customers#show</h1>-->

<div class = "container">
  <div class = "row">
    <div class = "col"><%= @customer.name_display %>さんの会員詳細</h4></div>
  </div>

  <div class = "row">
    <div class = "col">
      <table>
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.name_display2 %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td><%= @customer.is_active ? '退会':'有効' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class = "row">
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "col-md-1 btn btn-success" %>
    <%= form_with url: admin_root_path, method: :get do |f| %>
      <%= f.hidden_field :id, :value => @customer.id %>
      <%= f.hidden_field :name_display, :value => @customer.name_display %>
      <%= f.submit "注文履歴一覧を見る", class: "col btn btn-primary" %>
    <% end %>
  </div>

</div>
