<!--<h1>Admin::Customers#edit</h1>-->

<div class = "container-fluid px-5 m-5 px-sm-0">

  <div class = "row">
    <div class ="col">
      <h4 class = "mb-3 pb-3"><span class = "bg-headline px-2"><%= @customer.name_display %>さんの会員情報編集</span></h4>
    </div>
  </div>
  
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <div class = "row offset-1 mb-2">
      <div class = "col-md-2">会員ID</div>
      <div class = "col"><%= @customer.id %></div>
    </div>
    <div class = "row offset-1 mb-2">
      <%= f.label '氏名' , class: "col-md-2" %>
      <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 mr-4" %>
      <%= f.text_field :first_name, autofocus: true, class: "col-sm-3" %>
    </div>
     <div class = "row offset-1 mb-2">
      <%= f.label 'フリガナ' , class: "col-md-2" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-3 mr-4" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-3" %>
    </div>
    <div class = "row offset-1 mb-2">
      <%= f.label :postal_code ,"郵便番号", class: "col-md-2"%>
      <%= f.text_field :postal_code, autofocus: true, class: "col-sm-3" %>
    </div>

    <div class = "row offset-1 mb-2">
      <%= f.label :address ,"住所", class: "col-md-2"%>
      <%= f.text_field :address, autofocus: true, class: "col-sm-7" %>
    </div>

    <div class = "row offset-1 mb-2">
      <%= f.label :telephone_number ,"電話番号", class: "col-md-2"%>
      <%= f.text_field :telephone_number, autofocus: true, class: "col-sm-3" %>
    </div>

    <div class = "row offset-1 mb-2">
      <%= f.label :email ,"メールアドレス", class: "col-md-2"%>
      <%= f.email_field :email, autofocus: true, class: "col-sm-3" %>
    </div>

    <div class = "row offset-1 mb-4 pb-4">
      <%= f.label :is_active ,"会員ステータス", class: "col-md-2"%>
      <div class = "col">
        <%= f.radio_button :is_active, :false  %>
        <%= f.label :is_active, "有効", {value: :flase, style: "display: inline-block:"} %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "退会", {value: :true, style: "display: inline-block:"} %>
      </div>
    </div>

    <div class="row offset-1">
      <%= f.submit "変更を保存", class: "btn btn-success col-md-2 offset-2 btn-lg" %>
    </div>

  <% end %>

</div>
