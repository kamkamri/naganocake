<!--<h1>Admin::Orders#show</h1>-->

<div class = "container">

  <div class = "row">
    <div class = "col"><h4>注文履歴詳細</h4></div>
  </div>


  <div class = "row">
    <div class = "col">
      <table>
        <tbody>
          <tr>
            <th>購入者</th>
            <td><%= @order.customer.name_display %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= l @order.created_at, format: :short %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address_display %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
                <%= f.select :order_status, Order.order_statuses_i18n.invert.to_a %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class = "row">
    <div class ="col">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.price_intax %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %></td>
              <td>
                <%= form_with model:order_item, url: admin_order_item_path(order_item.id), method: :patch do |f| %>
                  <%= f.select :craft_status, OrderItem.craft_statuses_i18n.invert.to_a %>
                  <%= f.submit "更新", class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class = "col">
      <table>
        <tbody>
          <tr>
            <th><商品合計</th>
            <td><%= @order.item_total %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


</div>