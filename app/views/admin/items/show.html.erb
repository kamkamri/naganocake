<!--Admin::Items#show-->
<div class = "container-fluid px-5 m-5 px-sm-0">

  <div class = "row">
    <div class ="col-md-2 offset-1">
      <h4 class = "mb-3"><span class = "bg-headline px-2">商品詳細</span></h4>
    </div>
  </div>


  <div class = "row">

    <div class = "col-4 offset-md-1">
      <%= image_tag @item.get_item_image(400,300),class: "img-fluid" %>
    </div>

    <div class = "col-md-6">
      <table class = "table table-borderless ">
        <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</br>(税抜価格)</td>
              <td class = "align-bottom"><h5><%= @item.with_tax_price.to_s(:delimited) %>
                   (<%= @item.price.to_s(:delimited)%>)　円</h5>
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <!--部分テンプレート：販売ステータス-->
              <%= render 'layouts/sales_status', item: @item %>
            </tr>
        </tbody>
      </table>
      <div class = "text-center"><%= link_to "　編集する　",edit_admin_item_path(@item.id), class: 'btn btn-success btn-lg' %></div>
    </div>
  </div>

</div>
