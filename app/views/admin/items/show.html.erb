<!--Admin::Items#show-->
<div class = "container">

  <div class = "row">
    <!--画面　mdサイズ以上で、一つ右にずらす-->
    <div class = "col offset-md-1">
      <h4>商品詳細</h4>
    </div>
  </div>


  <div class = "row">

    <div class = "col-4 offset-md-1">
      <%= image_tag @item.get_item_image(300,300) %>
    </div>

    <div class = "col offset-md-1">
      <table class = "table table-borderless ">
        <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</br>(税抜価格)</td>
              <td><%= @item.with_tax_price.to_s(:delimited) %>
                   (<%= @item.price.to_s(:delimited)%>)　円
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
