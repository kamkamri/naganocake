<!--Admin::Items#new-->
<div class = "container">

  <div class = "row">
    <!--画面mdサイズ以上で8/12使用　mdサイズ以上で、一つ右にずらす-->
    <div class = "col offset-md-1">
      <h4>商品新規登録</h4>
    </div>
  </div>

  <div class = "form-group row">
    <div class = "col offset-md-1">
      <%= form_with model:[:admin ,@item], method: :post do |f| %>
        <%= f.label :item_image, '商品画像' %>
        <%= f.file_field :item_image, accept: "image/*", class: "col-sm-4" %></br>

        <%= f.label :name, '商品名' %>
        <%= f.text_field :name, autofocus: true, class: "col-sm-4" %></br>

        <%= f.label :introduction, '商品説明' %>
        <%= f.text_area :introduction, autofocus: true, class: "col-sm-4" %></br>

        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "選択してください", autofocus: true, class: "col-sm-4" %></br>

        <%= f.label :price, '税抜価格' %>
        <%= f.text_field :price, autofocus: true, class: "col-sm-4" %>円</br>

        <%= f.label :is_active, '販売ステータス' %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block:"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style:"display: inline-block:"} %></br>

        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>

</div>
