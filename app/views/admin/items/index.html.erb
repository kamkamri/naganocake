<!--Admin::Items#index-->
<div class = "container-fluid px-5 m-5 px-sm-0">

  <div class = "row">
    <div class ="col-md-2">
        <h4 class = "mb-3"><span class = "bg-headline px-2">商品一覧</span></h4>
    </div>

    <div class = "col-md-1 offset-8 text-right">
      <%=link_to new_admin_item_path do %>
       <i class="fa-solid fa-plus fa-2x"></i>
      <% end %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-11">
      <table class = "table table-borderless">
        <thead class = "table-active">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><u><%= link_to item.name,admin_item_path(item.id) %></u></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <!--部分テンプレート：販売ステータス-->
              <%= render 'layouts/sales_status', item: item %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class = "d-flex justify-content-center"><%= paginate @items %></div>

</div>
