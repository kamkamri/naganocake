<div class = "caotainer">
  <div class = "row">
    <% if params[:id].blank? %>
      <div class = "col offset-1"><h4>注文履歴一覧</h4></div>
    <% else %>
      <div class = "col"><h4><%= params[:name_display] %>さんの会員情報編集</h4></div>
    <% end %>
  </div>

  <div class = "row">
    <div class = "col offset-1">
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <% if params[:id].blank? %>
              <th>購入者</th>
            <% end %>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to  admin_order_path(order.id) do %>
                  <u><%= l order.created_at %></u>
                <% end %>
              </td>
              <% if params[:id].blank? %>
                <td><%= order.customer.name_display %></td>
              <% end %>
              <td><%= order.order_items.count %></td>
              <td><%= Order.order_statuses_i18n[order.order_status] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
