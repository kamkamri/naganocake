<!--<h1>Public::Orders#show</h1>-->

<div class = container >
  <div class = "row">
    <div><h4>注文履歴詳細</h4></div>
  </div>

  <div class = "row">
    <div class = "col">注文情報</div>
    <div class = "col">請求情報</div>
  </div>

  <div class = "row">

    <div class = "col">
      <table>
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
                〒<%= @order.postal_code%><br>
                  <%= @order.address %></br>
                  <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= Order.payment_methods_i18n[@order.payment_method]  %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= Order.order_statuses_i18n[@order.order_status] %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class = "col">
      <table>
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_payment - @order.postage %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>

  <div class = "row">
    <div class = "dol">注文内容</div>
  </div>

  <div class = "row">
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price_intax %></td>
            <td><%= order_item.amount%></td>
            <td><%= order_item.subtotal%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>
