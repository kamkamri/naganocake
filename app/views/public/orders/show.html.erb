<!--<h1>Public::Orders#show</h1>-->

<div class = "container-fluid px-5 m-5 px-sm-0">
  <div class = "row">
    <h4 class = "mb-3"><span class = "bg-headline px-2">注文履歴詳細</span></h4>
  </div>

  <div class = "row">
    <div class = "col-md-7">注文情報</div>
    <div class = "col-md-3">請求情報</div>
  </div>

  <div class = "row">
    <div class = "col-md-7">
      <table class = "table table-bordered">
        <tbody>
          <tr>
            <th class = "table-active">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class = "table-active">配送先</th>
            <td>
                〒<%= @order.postal_code%><br>
                  <%= @order.address %></br>
                  <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class = "table-active">支払方法</th>
            <td><%= Order.payment_methods_i18n[@order.payment_method]  %></td>
          </tr>
          <tr>
            <th class = "table-active">ステータス</th>
            <td><%= Order.order_statuses_i18n[@order.order_status] %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class = "col-md-3">
      <table class = "table table-bordered">
        <tbody>
          <tr>
            <th class = "table-active text-right">商品合計</th>
            <td class = "text-right"><%= @order.item_total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class = "table-active text-right">配送料</th>
            <td class = "text-right"><%= @order.postage.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class = "table-active text-right">ご請求額</th>
            <td class = "text-right"><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>

  <div class = "row">
    <div class = "dol">注文内容</div>
  </div>

  <div class = "row">
    <div class = "col-md-8">
      <!--部分テンプレート：ジャンル検索-->
      <%= render 'layouts/order_info', order_items: @order_items %>
    </div>
  </div>

</div>
