<!--<h1>Public::Orders#new</h1>-->

<div class = "container">

  <div class = "col">
    <h4>注文情報入力</h4>
  </div>

  <%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
    <h5>支払方法</h5>
    <div class = "row">
      <div class = "col">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

      </div>
    </div>

    <h5>お届け先</h5>
    <div class = "row">
      <div class = "col">

        <!--ご自身の住所-->
        <div class =. "form-check">
          <%= f.radio_button :select_address, 0, checked: true %>
          <%= f.label :select_address, "ご自身の住所" %>

          <p>〒<%= current_customer.postal_code %> <%= current_customer.address %></br>
          <%= current_customer.name_display %></p>
        </div>


         <!--登録済住所-->
        <div class =. "form-check">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :select_address, "登録済住所から選択" %>
          <div class ="row">
            <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address_display), class: "col" %>
          </div>
        </div>


         <!--新しいお届け先-->
        <div class =. "form-check">
          <%= f.radio_button :select_address, 2 %>
          <%= f.label :select_address, "新しいお届け先" %>

          <div class = "row">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-md-3"  %>
            <%= f.text_field :postal_code, class: "col-md-3" %>
          </div>
          <div class ="row">
            <%= f.label :address, "住所", class: "col-md-3" %>
            <%= f.text_field :address, class: "col-md-6" %>
          </div>
          <div class ="row">
            <%= f.label :name, "宛名", class: "col-md-3" %>
            <%= f.text_field :name, class: "col-md-3" %>
          </div>
        </div>

      </div>
    </div>

    <div class = "row">
      <!--カート画面からhiddenで受け取った合計金額をhidden_fieldで注文確認に送る-->
      <%= f.hidden_field :total, :value => params[:total]  %>
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
