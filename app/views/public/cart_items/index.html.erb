<!--<h1>Public::CartItems#index</h1>-->

<div class = "container">
  <div class = "row">

    <div class = "row"></div>
      <div class = "col">
        <h4>ショッピングカート</h4>
      </div>
      <%= link_to "カートを空にする", destroy_all_cart_path, method: :delete, class: "btn btn-danger" %>
    </div>

    <div class = "row">
      <div class = "col">

        <table>
          <thead>
            <tr>
              <th colspan = "2">商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= image_tag cart_item.item.get_item_image(100,100), class: "img-fluid" %></td>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td>
                  <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit "変更", class: "btn btn-success" %>
                  <% end %>
                <td><%= cart_item.subtotal %></td>
                <% @total += cart_item.subtotal %>
                <td><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </div>


    <div class = "row">
      <div class = "col">
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      </div>

      <div class = "col">
        <table>
          <tbody>
            <tr>
              <td>合計金額</td>
              <td><%= @total %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class = "row">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>

  </div>
</div>
