<!--ublic::Customers#show<-->
<div class = "container-fluid px-5 m-5 px-sm-0">

  <div class = "row mb-4">
    <!--画面　mdサイズ以上で、一つ右にずらす-->
    <div class = "col">
      <h4 class = "mb-3"><span class = "bg-headline px-2">マイページ</span></h4>
    </div>
  </div>

  <div class = "row mb-3">
    <!--画面　mdサイズ以上で、一つ右にずらす-->
    <div class = "col-md-2">
      <h4>登録情報</h4>
    </div>
    <%= link_to "編集する", customers_information_edit_path, class: "col-md-1 btn btn-success" %>
  </div>

  <div class = "row mb-4">
    <div class = "col-8">
      <table class = "table table-bordered">
        <tbody>
            <tr>
              <th class = "table-active">氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>

            <tr>
              <th class = "table-active">カナ</th>
              <td><%= @customer.last_name_kana %> <%=@customer.first_name_kana %></td>
            </tr>

            <tr>
              <th class = "table-active">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
              <th class = "table-active">住所</th>
              <td><%= @customer.address %></td>
            </tr>

            <tr>
              <th class = "table-active">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
              <th class = "table-active">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>


  <div class = "row mb-3">
    <!--画面　mdサイズ以上で、一つ右にずらす-->
    <div class = "col-md-1">
      <h4>配送先</h4>
    </div>
    <%= link_to "　一覧を見る　",  addresses_path, class: "btn btn-primary" %>
  </div>


  <div class = "row mb-3">
    <!--画面　mdサイズ以上で、一つ右にずらす-->
    <div class = "col-md-1">
      <h4>注文履歴</h4>
    </div>
    <%= link_to "　一覧を見る　",  orders_path, class: "btn btn-primary" %>
  </div>

</div>
