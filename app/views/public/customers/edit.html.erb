<!--<h1>Public::Customers#edit</h1>-->

<div class = "container">
  <div class = "row">
    <div class = "col-mb-3"></div>
      <h4 class = "mb-4">会員情報編集</h4>
    </div>

    <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

      <div class = "row mb-">
      <%= f.label '氏名' , class: "col-sm-3" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" , autocomplete: "family-name", class: "col-sm-3 mr-4" %>
      <%= f.text_field :first_name, autofocus: true, placeholder: "道子" , autocomplete: "given-name", class: "col-sm-3" %>
    </div>

    <div class = "row mb-2">
      <%= f.label 'フリガナ' , class: "col-sm-3" %>
      <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" , autocomplete: "on" , class: "col-sm-3 mr-4" %>
      <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" , autocomplete: "on", class: "col-sm-3" %>
    </div>

    <div class = "row mb-2">
      <%= f.label :postal_code ,"郵便番号", class: "col-sm-3"%>
      <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" , autocomplete: "postal-code" , class: "col-sm-3" %>
    </div>

    <div class = "row mb-2">
      <%= f.label :address ,"住所", class: "col-sm-3"%>
      <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" , class: "col-sm-7" %>
    </div>

    <div class = "row mb-2">
      <%= f.label :telephone_number ,"電話番号", class: "col-sm-3"%>
      <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" , autocomplete: "tel" , class: "col-sm-3" %>
    </div>

     <div class = "row mb-2">
      <%= f.label :email ,"メールアドレス", class: "col-sm-3"%>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" , autocomplete: "email" , class: "col-sm-3" %>
    </div>

    <div class="row">
      <%= f.submit "変更内容を保存", class: "btn btn-success col-sm-3 offset-3" %>
      <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger col-sm-1 offset-2" %>
     </div>

    <% end %>
  </div>
</div>
