<!--Public::Items#index-->

<div class = "container-fluid px-5 m-5 px-sm-0">

  <div class = "row">
    <div class = "col-md-2 offset-1" >
      <!--部分テンプレート：ジャンル検索-->
      <%= render 'layouts/genre_search', genres: @genres %>
    </div>

    <div class = "col-md-8">
      <div class = "row m-1">
        <h4>商品一覧</h4>
        <span> 　（全<%= @items.count %>件）</span>
      </div>

      <div class = "card shadw-lg">
        <div class = "row">
          <% @items.each do |item| %>
            <div class ="col-md-3 ">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image(300,300),class: "card-img-top  stretched-link" %>
              <% end %>
              <div class = "card-body">
                <p class= "card-text"><%= item.name %></p>
                <p class ="card-text"><%= "¥ #{item.with_tax_price.to_s(:delimited)}" %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class = "d-flex justify-content-center"><%= paginate @items %></div>
    </div>


  </div>
</div>
