<!--Public::Items#index-->

<div class = "conatainer">
  <div class = "row">
    <div class = "col-md-2 offset-1" >
      <table>
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

    <div class = "col-md-8">
      <div class = "row m-1">
        <h4>商品一覧</h4>
        <span> 　（全<%= @items.count %>件）</span>
      </div>

      <div class = "card shadw-lg">
        <div class = "row">
          <% @items.each do |item| %>
            <div class ="col-md-3 ">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image(300,300),class: "card-img-top  stretched-link" %>
              <% end %>
              <div class = "card-body">
                <p class= "card-text"><%= item.name %></p>
                <p class ="card-text"><%= "¥ #{item.with_tax_price.to_s(:delimited)}" %></p>
              </div>
            </div>
          <% end %>

        </div>
      </div>

    </div>

  </div>
</div>
